extends layouts/main-layout.pug

append script 
    script(src="/JS/AutoPlay.js") 
append content
    center
        h1 TODAY IS MY GRADUATION!!!!
        iframe(type='text/html' width='640' height='390' src="https://www.youtube.com/embed/DeXoACwOT1o?autoplay=1&mute=1" title="2-Hours Epic Music Mix | THE POWER OF EPIC MUSIC - Full Mix Vol. 2" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)

        br
        br
        div
            form.form(action="http://localhost:5001/grad-page/us-central1/API/contact", method="post")
